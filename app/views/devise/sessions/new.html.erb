
<div class="log-pages">
  <div class="log-left">
  </div>
  <div class="log-right">
    <h1>Log in</h1>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class:'btn-small' %>
        <div class='else-url-log'>
          <%= render "devise/shared/links", class:'else-url-log'%>
        </div>
      </div>
    <% end %>
 

    

    
  </div>
</div>
